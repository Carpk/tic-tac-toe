@font-face {
    font-family: 'GROBOLD';
    src: url(<%= asset_path('GROBOLD.ttf') %>) format('truetype');
    font-weight: 300;
    font-style: normal;
}

body {
  font-family: 'GROBOLD';
  font-size: 32px;
  letter-spacing: 2px;
}

.box {
  border-left: solid;
  border-top: solid;
  float:left;
  height: 114px;
  width: 114px;
}

.container {
  margin-left: auto;
  margin-right: auto;
  margin-top: 50px;
  width: 350px;
  min-height: 350px;
}

.container div:hover {
  background-image:url('select.png');
}

.boxcorner {
  border-left: none;
  border-top: none;
}

.boxtop {
  border-top: none;
}

.boxside {
  border-left: none;
}

.end-img {
  display: none;
  left: 5px;
  position:relative;
  top: -325px;
}

.footer {
  background: #cc00cb;
  border-radius: 30px;
  border: 2px solid black;
  bottom: 0;
  height: 3em;
  margin-bottom: 8px;
  padding-top: 8px;
  position: absolute;
  width: 98.5%;
}

.header {
  background: #00cc00;
  border-radius: 30px;
  border: 2px solid black;
  color: white;
  height: 100px;
}

.header h1 {
  margin-top: 0;
  padding-top: 10px;
}

input {
  background: white;
  border-radius: 9px;
}

.letter {
  font-size: 3.5em;
  left: 14px;
  position:relative;
  top: 12px;
}

.blue {
  color: #0000cc;
}

.red {
  color: #cc0000;
}

.selected {
  background: blue;
  height: 110px;
  width: 110px;
}

.code-link {
  position: absolute;
  bottom: 0;
  right: 50px;
  text-decoration: none;
  color: black;
  font-size: 10px;
}
body {
  margin-bottom: 80px;
}
html {
  position: relative;
  min-height: 100%;
}
h1 {
  text-shadow: 2px 2px 1px #000000;
}

